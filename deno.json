{
  "name": "@damir-majer/tsexample",
  "version": "0.4.0",
  "exports": "./src/mod.ts",
  "publish": {
    "exclude": [
      "tests/",
      "coverage/",
      "docs/",
      ".claude/",
      "node_modules/",
      "package.json",
      "package-lock.json",
      "vitest.config.ts",
      "src/mod.vitest.ts",
      "src/runner/vitest-adapter.ts"
    ]
  },
  "tasks": {
    "test": "deno test --allow-read --allow-env",
    "test:coverage": "deno test --allow-read --allow-env --coverage=coverage",
    "test:vitest": "npx vitest run",
    "test:all": "deno task test && deno task test:vitest",
    "check": "deno check src/mod.ts",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": false
  },
  "test": {
    "exclude": ["tests/vitest/"]
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": true,
    "exclude": ["node_modules/"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["node_modules/"]
  }
}
